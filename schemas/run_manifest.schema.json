{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://jarvis-workspace/schemas/run_manifest.schema.json",
  "title": "Run Manifest",
  "description": "Schema for Jarvis run bundle manifests",
  "type": "object",
  "required": ["session_id", "run_id", "timestamp", "status", "deliverable"],
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Stable identifier for the LibreChat conversation thread",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this specific user message/run",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when the run started",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "completed", "failed"],
      "description": "Current status of the run"
    },
    "user_prompt": {
      "type": "string",
      "description": "The original user message that triggered this run"
    },
    "deliverable": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["markdown", "code", "plan", "analysis", "mixed"],
          "description": "Type of deliverable produced"
        },
        "path": {
          "type": "string",
          "description": "Relative path to the primary deliverable file within this run bundle"
        },
        "summary": {
          "type": "string",
          "description": "Brief summary of what was produced (1-3 sentences)"
        },
        "supporting_files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of additional files in this run bundle"
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "agent": {
          "type": "string",
          "description": "Agent that handled this run (e.g., jarvis-router)"
        },
        "tools_used": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of tools/actions invoked during this run"
        },
        "delegations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "agent": { "type": "string" },
              "task": { "type": "string" }
            }
          },
          "description": "Sub-agents delegated to during this run"
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "duration_ms": {
          "type": "integer",
          "description": "Total execution time in milliseconds"
        },
        "token_count": {
          "type": "integer",
          "description": "Approximate token count for this run"
        }
      }
    }
  }
}
